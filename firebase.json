{
  "hosting": {
    "target": "console",
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "apexflow-api",
          "region": "us-central1",
          "pinTag": false
        }
      },
      {
        "source": "/liveness",
        "run": {
          "serviceId": "apexflow-api",
          "region": "us-central1",
          "pinTag": false
        }
      },
      {
        "source": "/readiness",
        "run": {
          "serviceId": "apexflow-api",
          "region": "us-central1",
          "pinTag": false
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin-allow-popups"
          }
        ]
      }
    ]
  }
}
